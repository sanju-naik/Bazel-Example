load("@build_bazel_rules_ios//rules:framework.bzl", "apple_framework")

apple_framework(
    name = "FirebaseInstallations",
    srcs = glob([
        "FirebaseInstallations/Source/Library/**/*.m",
        "FirebaseInstallations/Source/Library/**/*.h",
        "FirebaseCore/Extension/*.h",
    ]),
    objc_copts = ["-IPods/FirebaseInstallations"],
    platforms = {"ios": "10.0"},
    public_headers = [
        "FirebaseInstallations/Source/Library/Public/FirebaseInstallations/FirebaseInstallations.h",
        "FirebaseInstallations/Source/Library/Public/FirebaseInstallations/FIRInstallations.h",
        "FirebaseInstallations/Source/Library/Public/FirebaseInstallations/FIRInstallationsAuthTokenResult.h",
        "FirebaseInstallations/Source/Library/Public/FirebaseInstallations/FIRInstallationsErrors.h",
    ],
    sdk_frameworks = ["Security"],
    swift_copts = [
        "-Xcc",
        "-IPods/FirebaseInstallations",
    ],
    visibility = ["//visibility:public"],
    xcconfig = {"GCC_C_LANGUAGE_STANDARD": "c99"},
    deps = [
        "//Pods/FirebaseCore",
        "//Pods/GoogleUtilities",
        "//Pods/PromisesObjC",
    ],
)
